<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>
            <% if (errors) { %>
                <ul class="failure">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <div class="delete-inventory-form-container">
                        <form action="/inv/delete" method="post" id="deleteForm">
                            <fieldset>
                                <legend>Vehicle details</legend>
                                <p>Confirm Deletion - The delete is permanent.</p>
                                <br>
                                <label for="inv_make">Make</label>
                                <input type="text" name="inv_make" id="inv_make" required readonly
                                    value="<%= locals.inv_make %>" placeholder="Min of 3 characters"
                                    pattern="^[A-Z][a-zA-Z]{2,}$">
                                <label for="inv_model">Model</label>
                                <input type="text" name="inv_model" id="inv_model" required
                                    value="<%= locals.inv_model %>" placeholder="Min of 3 characters"
                                    pattern="^[A-Z][a-zA-Z0-9]{2,}$" readonly>
                                <label for="inv_year">Year</label>
                                <input type="number" name="inv_year" id="inv_year" required
                                    value="<%= locals.inv_year %>" placeholder="4-digit year" min="1000" readonly>
                                <label for="inv_price">Price</label>
                                <input type="number" name="inv_price" id="inv_price" required min=0 step=".01"
                                    value="<%= locals.inv_price %>" placeholder="decimal or integer" readonly>
                                <input id="deleteInventory" type="submit" name="submit" value="Delete Vehicle">
                                <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>
                                    "
                                    <% } %>>
                            </fieldset>
                        </form>
                    </div>