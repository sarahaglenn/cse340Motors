<header id="top-header">
    <span class="site-name">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <% if (locals.loggedin) { %>
        <div id="tools">
            <a title="Click to manage account" href="/account/">Welcome <%= locals.accountData.account_firstname %></a>
            <form action="/account/logout" method="POST">
                <button type="submit" title="Click to log out">Logout</button>
            </form>
        </div>
        <% } else { %>
            <div id="tools">
                <a title="Click to log in" href="/account/login">My Account</a>
            </div>
            <% } %>
</header>
