<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <% messages() %>
            <div class="login-form-container">
                <form action="/">
                    <fieldset>
                        <legend>Account Details</legend>
                        <label for="account_email">Email: </label><br>
                        <input type="email" name="account_email" id="account_email" required
                            placeholder="someone@mail.com" autofocus><br>
                        <label for="account_password">Password: </label><br>
                        <input type="password" name="account_password" id="account_password" required><br>
                        <input type="submit" value="Login">
                    </fieldset>
                </form>
                <p>No account? <a href="account/create">Sign-up here!</a></p>
            </div>